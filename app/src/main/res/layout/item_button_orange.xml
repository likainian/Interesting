<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/but_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/it_image"
        android:layout_margin="5dp"
        android:src="@drawable/man"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/it_title"
        android:textSize="15sp"
        android:text="新手任务"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/it_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/it_content"
        android:textColor="@color/orange"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_right"
        android:text="最高可获得7500万金币"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/goto_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>